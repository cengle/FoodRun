<h1> Recipe Search Results for "<%=@input%>"</h1>

<div class="ubercolortabs">
<ul>
<%if @recipe_results%>
<li><%= link_to "<span> Search Recipes </span>", {:controller=>'recipes', :action=>'search', :input=>@input}, :class=>"selected"%></li>
<%else%>
<li><%= link_to "<span> Search Recipes </span>", {:controller=>'recipes', :action=>'search', :input=>@input}%></li>
<%end%>
<li><%= link_to "<span> Search Meal Plans </span>", :controller => 'meal_plans', :id => 0, :action => 'search', :input => @input, :class=>'squarebutton'%></li>
</ul>
</div>
	
<div class="ubercolordivider"> </div>

<% @recipe_results.each do |recipe| %>
<div class="post">

	<p class="meta"><span class="date"> <%= recipe.created_at.asctime %> 
	<% if recipe.user%>
		Posted by <%= link_to recipe.user.username, :controller => 'recipes' , :action => 'showMyRecipes', :user => recipe.user, :id => '2' %></p>
	<%end%>
					
	<h2 class="title"><%= link_to recipe.title, recipe %> </h2>
	<div class="entry_and_photos">
		<div class="recipe_entry">
			<% if recipe.description%>
				<%=recipe.description%>
			<%else %>
				No Description
			<%end%>
		</div>
		<div class="resize2">
			<% if recipe.photo.url != "/photos/original/missing.png"%>
					<%= link_to image_tag (recipe.photo.url), recipe %>
			<%end%>
		</div>
	</div>
</div>
<% end %>


