<p>Grocery list</p>

<table>
	<tr>
		<th>Name</th>
		<th>Number</th>
		<th>Unit</th>
		<th>Section</th>
	</tr>
	
<% @grocery_list.each do |ingredient| %>
	<tr>
		<td><%=h ingredient.name%></td>
		<td><%=h ingredient.number%></td>
		<td><%=h ingredient.unit%></td>
		<td><%=h ingredient.section%></td>
	</tr>
<% end %>



