<h1>Recipe list</h1>

<% @recipe_list.recipes.each do |recipe| %>
  <div class="recipe_in_list">
    <%=h recipe.title %>
    <%= link_to 'Show', recipe %>
    <%= link_to 'Remove from list', delete_from_recipe_list_path(@recipe_list, recipe), :confirm => 'Are you sure?', :method => :delete%>
  </div>
<% end %>

<%= link_to 'Show Grocery List', groceryList_path(@recipe_list)%>
<%= link_to 'Edit', edit_recipe_list_path(@recipe_list) %> |
<%= link_to 'Back', recipes_path %>
